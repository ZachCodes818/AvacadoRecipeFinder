<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="index.css">

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body>
      <div class="container">
<h1> Here's your Recipes!</h1>
<h2> <%= searchTerm %>  Avocado Dishes</h2>

<div class="row">
    <% recipes.forEach(function(recipe){ %>
      <% var name %>
      <% if (recipe.recipe.label.length >= 35) { %>
        <% name = recipe.recipe.label.slice(0, 35) + "..." %>              
      <% } else { %>
        <% name = recipe.recipe.label %>
        <% } %>
        <div class="col s12 m6">
        <div class="card medium">
                <div class="card-image waves-effect waves-block waves-light">
                  <img class="activator" src="<%= recipe.recipe.image %>">
                </div>
                <div class="card-content">
                  <span class="card-title activator grey-text text-darken-4"><%= name %></span>
                  
                </div>
                <div class="card-action">
                        <a href="<%= recipe.recipe.url %>">Recipe @ <%= recipe.recipe.source %></a>
                </div>
                <div class="card-reveal">
                  <span class="card-title grey-text text-darken-4"><%= recipe.recipe.label %><i class="material-icons right">close</i></span>
                  <p>
                      <ul>
                        <% recipe.recipe.ingredientLines.forEach(function(ingredient){ %>
                                <li><%= ingredient %></li>
                            <% }); %>
                        </ul>
                  </p>
                </div>
              </div>
        </div>
    <% }); %>
</div>
</div> 

    <!--JavaScript at end of body for optimized loading-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>